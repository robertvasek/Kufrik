@{
    ViewData["Title"] = "Zájezdy";
}

<div class="landing">

    <div class="mainBanner" style="background-image: url('/images/tropical.jpg'); background-position: center bottom 20%;">

        <h1 class="mainText text-center">Zájezdy</h1>

        <a href="#tours_content">
            <button class="mainButton" type="button">Více</button>
        </a>

    </div>

</div>

<div id="tours_content">


    @{

        foreach (var singleTrip in Model)
        {
        <a class="tripPreview" asp-area="" asp-controller="Home" asp-action="Trip" asp-route-id="@singleTrip.Id">
            

                @if (singleTrip.ImageUrls != null && singleTrip.ImageUrls.Length != 0)
                {
                    <div class="tripImg" style="background-image: url('@singleTrip.ImageUrls[0]');"></div>
                }

                <div class="tripText">
                    <h1>@singleTrip.Country</h1>
                    <h6>@singleTrip.ShortDescription</h6>
                </div>

                <div class="tripProperties">
                    <h5 class="tripDate">@singleTrip.StartDate.ToString("dd. MM.") - @singleTrip.EndDate.ToString("dd. MM. yyyy")</h5>
                    <h5 class="tripPrice">@singleTrip.Price Kč</h5>
                </div>

        </a>
        }

    }

</div>