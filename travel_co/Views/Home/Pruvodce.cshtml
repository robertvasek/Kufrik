@{
    ViewData["Title"] = "Průvodce";
}

<div class="landing">

    <img class="bannerImg " src="~/images/cathedral.jpg">
    <h1 class="mainText" class="text-center">Průvodce</h1>

    <a href="#guide_content">
        <button class="mainButton" type="button">Více</button>
    </a>

</div>

<div id="guide_content">

    @{

        foreach (var singleCountry in Model)
        {
            <div class="tripPreview">

                @if (singleCountry.ImageUrls != null && singleCountry.ImageUrls.Length != 0)
                {
                    <div class="tripImg" style="background-image: url('@singleCountry.ImageUrls[0]');"></div>
                }

                <div class="tripText">
                    <h1>@singleCountry.Name</h1>
                </div>

                <div class="tripProperties">
                    <h5 class="tripDate">hlavní město: @singleCountry.Capital</h5>
                    <h5 class="tripPrice">@singleCountry.CountryCurrency Kč</h5>
                </div>

                <a class="readMoreButton" asp-area="" asp-controller="Home" asp-action="Trip" asp-route-id="@singleCountry.Id">Více</a>

            </div>
        }

    }
</div>