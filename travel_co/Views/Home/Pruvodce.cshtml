@{
    ViewData["Title"] = "Průvodce";
}

<div class="landing">

    <div class="mainBanner" style="background-image: url('/images/cathedral.jpg'); background-position: center bottom;">

        <h1 class="mainText text-center">Průvodce</h1>

        <a href="#guide_content">
            <button class="mainButton" type="button">Více</button>
        </a>

    </div>

</div>

<div id="guide_content">
    <button class="arrow left" onclick="scrollDivs('left')">&#8592;</button>
    <ul class="tripsCarousel">

        @{

            foreach (var singleCountry in Model)
            {
                <li class="countryPreview">

                    @if (singleCountry.ImageUrls != null && singleCountry.ImageUrls.Length != 0)
                    {
                        <div class="guideImg"><img src="@singleCountry.ImageUrls[0]"></div>
                    }

                    <h2>@singleCountry.Name</h2>
                    <span>hlavní město: @singleCountry.Capital</span>
                    <span>měna: @singleCountry.CountryCurrency</span>

                    <a class="readMoreButton" asp-area="" asp-controller="Home" asp-action="Country" asp-route-id="@singleCountry.Id">Více</a>

                </li>
            }

        }

    </ul>
    <button class="arrow right" onclick="scrollDivs('right')">&#8594;</button>
</div>