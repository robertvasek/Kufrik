<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kufřík</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/travel_co.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                 
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kufřík</a>

                <div id="nav-items">
                    <ul id="navul" class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Domů</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Zajezdy">Zájezdy</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Pruvodce">Průvodce</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Časté otázky</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="font-size: 0.8rem">
            Copyright &copy; 2023 Kufřík Inc. Všechna práva vyhrazena. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

